{
  "name": "Helical Gears",
  "description": "Standard tooth proportions for helical gears",
  "variables": {
    "a": {
      "description": "Addendum",
      "unit": "in",
      "type": "continuous"
    },
    "b": {
      "description": "Dedendum",
      "unit": "in",
      "type": "continuous"
    },
    "P_n": {
      "description": "Normal diametral pitch",
      "unit": "1/in",
      "type": "continuous"
    },
    "N_P": {
      "description": "Number of teeth on pinion",
      "unit": "",
      "type": "integer"
    },
    "N_G": {
      "description": "Number of teeth on gear",
      "unit": "",
      "type": "integer"
    },
    "psi": {
      "description": "Helix angle",
      "unit": "deg",
      "type": "continuous"
    },
    "phi_t": {
      "description": "Transverse pressure angle",
      "unit": "deg",
      "type": "dropdown",
      "options": [
        {"label": "14.5\u00b0 (old standard)", "value": 14.5},
        {"label": "20\u00b0 (standard)", "value": 20},
        {"label": "25\u00b0", "value": 25},
        {"label": "Custom", "value": "custom"}
      ]
    },
    "phi_n": {
      "description": "Normal pressure angle",
      "unit": "deg",
      "type": "continuous"
    },
    "B_n": {
      "description": "Normal backlash",
      "unit": "in",
      "type": "continuous"
    },
    "d": {
      "description": "Pinion pitch diameter",
      "unit": "in",
      "type": "continuous"
    },
    "D": {
      "description": "Gear pitch diameter",
      "unit": "in",
      "type": "continuous"
    },
    "d_o": {
      "description": "Pinion outside diameter",
      "unit": "in",
      "type": "continuous"
    },
    "D_o": {
      "description": "Gear outside diameter",
      "unit": "in",
      "type": "continuous"
    },
    "d_r": {
      "description": "Pinion root diameter",
      "unit": "in",
      "type": "continuous"
    },
    "D_r": {
      "description": "Gear root diameter",
      "unit": "in",
      "type": "continuous"
    },
    "d_b": {
      "description": "Pinion base diameter",
      "unit": "in",
      "type": "continuous"
    },
    "D_b": {
      "description": "Gear base diameter",
      "unit": "in",
      "type": "continuous"
    },
    "C": {
      "description": "Center distance (external)",
      "unit": "in",
      "type": "continuous"
    },
    "t_n": {
      "description": "Normal arc tooth thickness",
      "unit": "in",
      "type": "continuous"
    }
  },
  "equations": [
    {
      "name": "Addendum",
      "equation": "Eq(a, 1.00 / P_n)"
    },
    {
      "name": "Dedendum",
      "equation": "Eq(b, 1.25 / P_n)"
    },
    {
      "name": "Pinion pitch diameter",
      "equation": "Eq(d, N_P / (P_n * cos(psi * pi / 180)))"
    },
    {
      "name": "Gear pitch diameter",
      "equation": "Eq(D, N_G / (P_n * cos(psi * pi / 180)))"
    },
    {
      "name": "Pinion outside diameter",
      "equation": "Eq(d_o, d + 2*a)"
    },
    {
      "name": "Gear outside diameter",
      "equation": "Eq(D_o, D + 2*a)"
    },
    {
      "name": "Pinion root diameter",
      "equation": "Eq(d_r, d - 2*b)"
    },
    {
      "name": "Gear root diameter",
      "equation": "Eq(D_r, D - 2*b)"
    },
    {
      "name": "Standard center distance (external)",
      "equation": "Eq(C, (D + d) / 2)"
    },
    {
      "name": "Normal arc tooth thickness",
      "equation": "Eq(t_n, pi / (2*P_n) - B_n / 2)"
    },
    {
      "name": "Pinion base diameter",
      "equation": "Eq(d_b, d * cos(phi_t * pi / 180))"
    },
    {
      "name": "Gear base diameter",
      "equation": "Eq(D_b, D * cos(phi_t * pi / 180))"
    },
    {
      "name": "Base helix angle",
      "equation": "Eq(phi_n, atan(tan(psi * pi / 180) * cos(phi_t * pi / 180)) * 180 / pi)"
    }
  ],
  "tables": {}
}